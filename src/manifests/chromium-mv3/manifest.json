{
	"manifest_version": 3,
	"version": "5.3.0",
	"name": "GPThemes - ChatGPT Customization & Tweaks",
	"description": "Redesign ChatGPT: custom colors, fonts & layouts â€” widescreen mode, width sliders, expandable chatbox, hide header/footer & more.",
	"author": "itsmarta",
	"homepage_url": "https://github.com/itsmartashub/GPThemes",
	"host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
	"icons": {
		"16": "../../assets/icons/16.png",
		"19": "../../assets/icons/19.png",
		"32": "../../assets/icons/32.png",
		"38": "../../assets/icons/38.png",
		"48": "../../assets/icons/48.png",
		"128": "../../assets/icons/128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
			"js": ["../../js/content.js"],
			"css": ["../../sass/index.scss"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "../../js/background/index.js",
		"type": "module"
	},
	"permissions": ["storage"],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
	},
	"action": {
		"default_popup": "../../popup/popup.html",
		"default_icon": {
			"16": "../../assets/icons/16.png",
			"48": "../../assets/icons/48.png",
			"128": "../../assets/icons/128.png"
		},
		"default_title": "GPThemes - ChatGPT Customization"
	}
}
